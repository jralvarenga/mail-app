{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "git-cz",
    "commit:all": "git add -A && git-cz"
  },
  "devDependencies": {
    "@budio/eslint-config": "workspace:*",
    "@budio/typescript-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-conventional-emoji": "^1.0.2",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-emoji"
    }
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
